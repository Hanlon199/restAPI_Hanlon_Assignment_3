<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hanlo.ls10_demo.MainActivity">

    <TextView
        android:id="@+id/title_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:fontFamily="cursive"
        android:text="@string/title_main"
        android:textSize="36sp"
        android:textColor="@color/title_main"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title_main"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="39dp"
        android:fontFamily="cursive"
        android:text="@string/first_name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/first_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name"
        android:layout_alignStart="@+id/first_name"
        android:layout_below="@+id/first_name"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="14sp"
        android:hint="Enter a name..."
        />

    <TextView
        android:id="@+id/second_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/first_name_input"
        android:layout_alignStart="@+id/first_name_input"
        android:layout_below="@+id/first_name_input"
        android:layout_marginTop="50dp"
        android:fontFamily="cursive"
        android:text="@string/other_name"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/second_name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/second_name"
        android:layout_alignStart="@+id/second_name"
        android:layout_below="@+id/second_name"
        android:ems="10"
        android:hint="Enter a name..."
        android:inputType="textPersonName"
        />

    <Button
        android:id="@+id/calculateLove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_name_input"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:textColor="@color/title_main"
        android:onClick="onCalculateLove"
        android:text="@string/calculate" />

</RelativeLayout>